<div class="run-list__container">
  <ul class="run-list">
    {{#each model as |run|}}
     {{#link-to "details" run._id}}
    <li class="run-list__item">
      <span class="run-list__item__date">
        {{run.date}}
      </span>
      <span class="run-list__item__time">
        {{run.time}}
      </span>
    </li>
    {{/link-to}}
    {{/each}}
  </ul>
</div>


<footer>

  {{!-- <div class="add-run__button">
    {{fa-icon "plus" size=3}}
  </div> --}}
  <div class="footer-space">
  {{!-- space! --}}
  </div>
  <div class="footer-button">
  {{#link-to "new"}}
  {{#fa-stack size=2 as |s|}}
  {{s.stack-2x "circle"}}
  {{s.stack-1x "plus"}}
{{/fa-stack}}
{{/link-to}}
</div>
</footer>
